  "healthDimensions": {
    "performance": {
      "description": "Team's ability to deliver value consistently",
      "key_metrics": ["velocity", "cycle_time", "throughput", "predictability"],
      "warning_signs": ["Declining velocity", "Increasing cycle time", "Missing commitments"],
      "improvement_strategies": ["Process optimization", "Skill development", "Tool improvements"]
    },
    "quality": {
      "description": "Sustainability and maintainability of team output",
      "key_metrics": ["defect_rate", "test_coverage", "code_review_time", "technical_debt"],
